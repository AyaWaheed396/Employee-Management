@model EmployeeViewModel
@{
    ViewData["Title"] = "Details";
}


<form method="post" asp-action="Details">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>Employee Details</h2>
			<hr />
		</div>
        
		<Partial name="PartialViews/DetailsDeletePartialView" />

		<a class="btn btn-success" style="width:150px" asp-action="Update" asp-route-id="@Model.Id">Update</a>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>


	</div>
</form>

