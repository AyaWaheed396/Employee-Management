@model EmployeeViewModel
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="Update" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>Update Employee</h2>
			<hr />
		</div>
		<Partial name="PartialViews/CreateOrUpdatePartialView" />
        
		<button type="submit" class="btn btn-success" style="width:150px">Update</button>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

