@model EmployeeViewModel
@{
	ViewData["Title"] = "Create";
	
}

<form asp-controller="Employee" asp-action="Create" enctype="multipart/form-data">
	 <input asp-for="Id" hidden />

	 <div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>Create New Employee</h2>
			<hr />
		</div>
		<Partial name="PartialViews/CreateOrUpdatePartialView" />

		<button type="submit" class="btn btn-primary" style="width:150px">Add</button>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	 </div>
</form>
