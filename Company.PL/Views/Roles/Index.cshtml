@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary" >Create New Role</a>
<br />
<br />


@if (Model?.Count() > 0)
{

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M=>M.Id)</th>
                <th>@Html.DisplayNameFor(M=>M.Name)</th>
                <th>@Html.DisplayNameFor(M=>M.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Role in Model)
            {
                <tr>

                    <td>@Role.Id</td>
                    <td>@Role.Name</td>
                    <td>@Role.CreateAt.Day-@Role.CreateAt.Month-@Role.CreateAt.Year</td>

                    <partial name="_ButtonsPartial" model="Role.Id"/>

                </tr>
            }

        </tbody>
    </table>
}

else
{
    <div class=" alert alert-warning">
        <h2>There Is No Employee :(</h2>
    </div>
}
